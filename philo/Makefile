NAME = philo
CC = cc
CFLAGS = -Wall -Werror -Wextra
SRC = src/main.c src/check_args.c src/set_data.c src/ft_philosopher.c src/ft_routine.c src/ft_routine_all_full.c src/ft_routine_all_alive.c
OBJ = ${SRC:.c=.o}
INCLUDE = -I include

%.o: %.c
	${CC} ${CFLAGS} -c -o $@ $< ${INCLUDE}

${NAME}: ${OBJ}
	${CC} ${CFLAGS} -o ${NAME} ${OBJ}

all: ${NAME}

clean:
	rm -f ${OBJ}

fclean: clean
	rm -f ${NAME}

re: fclean all